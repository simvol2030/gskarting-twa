{
  "name": "cashier-loyalty-system",
  "version": "1.0.0",
  "description": "Desktop cashier interface for loyalty system",
  "main": "electron.js",
  "author": "My App Butik",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development DEV_SERVER_URL=http://localhost:5173/cashier?store_id=1 electron .",
    "build": "npm run build:svelte && npm run copy:build",
    "build:svelte": "cd .. && npm run build",
    "copy:build": "rm -rf build && cp -r ../build .",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "config:generate": "node generate-store-configs.js",
    "config:generate:store": "node generate-store-configs.js",
    "package:all-stores": "npm run package:store1 && npm run package:store2 && npm run package:store3 && npm run package:store4 && npm run package:store5 && npm run package:store6",
    "package:store1": "npm run package:store -- 1 Алмаз",
    "package:store2": "npm run package:store -- 2 Изумруд",
    "package:store3": "npm run package:store -- 3 Сапфир",
    "package:store4": "npm run package:store -- 4 Рубин",
    "package:store5": "npm run package:store -- 5 Топаз",
    "package:store6": "npm run package:store -- 6 Янтарь",
    "package:store": "node package-store.js",
    "clean": "rm -rf dist build node_modules configs"
  },
  "build": {
    "appId": "com.myappbutik.cashier",
    "productName": "Касса Лояльность",
    "directories": {
      "buildResources": ".",
      "output": "dist"
    },
    "files": [
      "electron.js",
      "preload.js",
      "build/**/*",
      "icon.png",
      "icon.svg",
      "!node_modules"
    ],
    "extraResources": [
      {
        "from": "../data",
        "to": "data",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.svg",
      "publisherName": "My App Butik",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Касса Лояльность",
      "artifactName": "Cashier-Loyalty-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.svg",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.svg",
      "category": "Office"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  }
}
